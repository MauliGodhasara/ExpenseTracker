@model ExpenseTracker.Models.CategoryDetail

@{
    ViewData["PageActionText"] = "+Back To List";
    ViewData["PageActionUrl"] = "/CategoryDetails/Index";
    ViewData["PageTitle"] = "Create New Category";

}


<div class="row d-flex justify-content-center">
    <div class="col-md-7 ">
        <div class="widget p-5">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Expenseslimet" class="control-label"></label>
                    <input asp-for="Expenseslimet" class="form-control" />
                   <span asp-validation-for="Expenseslimet" class="text-danger fs-6"></span>
               </div>
                <div class="mb-3">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

